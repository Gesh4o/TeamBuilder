@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul id="navigation-bar" class="nav navbar-nav navbar-right">
            <li class="navbar-events"><a href="/requests"><i class="fa fa-ticket navbar-ico" aria-hidden="true"></i><span class="navbar-number">3</span></a></li>
            <li class="navbar-events"><a href="/invitations"><i class="fa fa-group navbar-ico" aria-hidden="true"></i><span class="navbar-number">3</span></a></li>
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Details", "Account", routeValues: new { username = User.Identity.GetUserName() }, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
