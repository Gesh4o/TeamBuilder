@model TeamBuilder.Clients.Models.Team.SendJoinRequestViewModel

@using (Ajax.BeginForm(null, null, new AjaxOptions
{
    Url = Url.Action("SendJoinRequest", "Account"),
    HttpMethod = "post",
    OnSuccess = "onInviteRequestSendSuccess",
    OnFailure = "onInviteRequestSendFail",
}, new { }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TeamId)
    @Html.HiddenFor(model => model.UserId)

    <input id="send-request-btn" type="submit" value="Join" class="btn btn-success" />
}